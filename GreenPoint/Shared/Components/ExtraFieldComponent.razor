<div class="form-group row">
    <div class="form-group  col-md">
        <input type="text" class="form-control mb-2" id="name" @bind-value="@DescriptionProperty.Name" />
        <input type="text" class="form-control mb-2" id="description" @bind-value="@DescriptionProperty.Description" />
    </div>
    <div class="form-group col-md-1 align-items-center">
        <button type="button" class="btn btn-danger btn-circle" onclick="@(() => Remove.InvokeAsync(DescriptionProperty.Id))">
            <i class="oi oi-x" />
        </button>
    </div>
</div>

@code {
    [Parameter]
    public DescriptionProperty DescriptionProperty { get; set; }
    [Parameter]
    public EventCallback<int> Remove { get; set; }
}
